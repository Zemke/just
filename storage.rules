service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if false;
    }
    match /images/{imageId} {
      allow read, write: if request.auth != null && request.resource.size < 5 * 1024 * 1024 // 5MB
                         && (request.resource.customMetadata.from == request.auth.uid
                         || request.resource.customMetadata.to == request.auth.uid);
      allow write: if request.resource.customMetadata.from == request.auth.uid;
    }
  }
}
